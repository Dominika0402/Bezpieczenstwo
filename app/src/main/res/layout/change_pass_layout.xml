<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <Button
        android:id="@+id/change_pass_B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZAPISZ"
        android:layout_below="@+id/change_pass_ET"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp" />


    <EditText
        android:id="@+id/change_pass_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="WPISZ NOWE HASLO"
        android:layout_below="@+id/old_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <EditText
        android:id="@+id/old_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="WPISZ STARE HASŁO"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/change_pass_ET"
        android:layout_marginTop="100dp" />
</RelativeLayout>